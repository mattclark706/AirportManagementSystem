@page
@model AirportManagementSystem.Pages.AirportOpsModel
@{
	ViewData["Title"] = "Airport Operations";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/departureBoard.css" />
</head>
<header>
    <div class="header-content">
        <h1>Airport Management System</h1>
        <nav>
            <ul>
                <li><a asp-page="/Index">Departures Board</a></li>
                <li><a asp-page="/ArrivalsBoard">Arrivals Board</a></li>
                <li><a asp-page="/AirportOps">Airport Operations</a></li>
            </ul>
        </nav>
</header>
<body>
    <h1 class="flight-header">@ViewData["Title"]</h1>
    <div id="clockDisplay" class="clock-style">Current Time: 00:00</div>
    <table class="departure-board">
        <thead>
            <tr>
                <th>Gates</th>
                <th>InUse</th>
                <th>Arrival or Departure</th>
                <th>FlightNumber</th>
                <th>Flight Arrival/Departure Time</th>
            </tr>
        </thead>
        <tbody id="operationsBoard">
            <!-- made in javascript -->
        </tbody>
    </table>
    <script src="~/js/flightBoard.js"></script>
</body>
</html>

